
.file-upload {
  width: 100%;
  display: flex;
  background: $main.anchor;
  align-items: center;
  padding: 0 16px;
  &.large-size {
    height: 72px;
    border-radius: 4px;
    box-shadow: inset 0 -1px 0 0 #171d2a;
  }
}

.file-desc {
  margin-left: 16px;
  color: rgba($main.grey, 0.5);
  f-cybex-style('heavy');
  line-height: 1.71;
  position: relative;
  top: 2px;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  cursor: pointer

  &.dirty {
    color: rgba($main.white, 1);
    display: flex;
    flex: 1 1 auto;
    justify-content: space-between;
    align-items: center;
  }

  .file-remove {
    width: 24px;
    margin: 0;
    opacity: 0.5;
    height: 24px;
    &:hover {
      opacity: 1;
    }
  }
}