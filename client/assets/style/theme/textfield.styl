// mixin
theme-placeholder($size) {
  $sizeVar = lookup('$input-' + $size);

  &.{$size}-size {
    // placeholder
    textarea::-ms-input-placeholder,
    input:-ms-input-placeholder {
      color: rgba($main.grey, 0.5);
      font-size: $sizeVar.label-size;
    }

    textarea::placeholder,
    input::placeholder {
      color: rgba($main.grey, 0.5);
      font-size: $sizeVar.label-size;
    }

    textarea::-webkit-input-placeholder,
    input::-webkit-input-placeholder {
      color: rgba($main.grey, 0.5);
      font-size: $sizeVar.label-size;
    }
  }
}

// TODO: light theme调整颜色
theme-solo($size, theme = 'cybex-dark') {
  $sizeVar = lookup('$input-' + $size);

  &.{$size}-size {
    // fixed label
    .fixed-label {
      font-size: $sizeVar.label-size;
      top: 'calc(-%s - 4px)' % $sizeVar.fixed-label-height;
      height: $sizeVar.fixed-label-height;
    }
    .fixed-append-label {
      font-size: 'calc(%s + 2px)' % $sizeVar.label-size;
      top: 'calc(-%s - 6px)' % $sizeVar.fixed-label-height;
      height: $sizeVar.fixed-label-height;
    }

    &.v-text-field--fixed-label {
      margin: 'calc(%s + 4px) 0 0' % $sizeVar.fixed-label-height;
    }

    .v-input__slot {
      padding: '0 %s' % $sizeVar.input-slot-padding;
    }

    // prepend icon
    .v-input__prepend-inner {
      padding: 0;

      .v-input__icon--prepend-inner {
        margin: $sizeVar.prepend-icon-margin;
        width: $sizeVar.prepend-icon-size;
        height: $sizeVar.prepend-icon-size;
        min-width: $sizeVar.prepend-icon-size;
      }

      .v-icon {
        font-size: $sizeVar.prepend-icon-size;
      }
    }

    // append icon
    .v-input__append-inner {
      font-size: $sizeVar.append-icon-size;

      // capcha
      .captcha-field {
        svg {
          top: unit(($sizeVar.input-height - captcha-svg-height) / 2, px);
          transform: 'scale(1.25, %s)' % ($sizeVar.input-height / captcha-svg-height);
        }
      }

      .v-icon {
        &.ic-cancel {
          font-size: $sizeVar.append-cancel-size !important;
        }
      }
    }

    .v-messages, input {
      font-size: $sizeVar.label-size;
    }

    .v-input__control {
      min-height: unit($sizeVar.input-height, px);
    }

    &.v-text-field-is-multiple {
      .v-input__slot {
        min-height: unit($sizeVar.input-height, px);
        height: 100%;
        padding: 16px 7px 7px 16px;
      }
    }
    .v-input__slot {
      height: unit($sizeVar.input-height, px);
    }

    .v-messages {
      min-height: $sizeVar.margin-bottom-height;
      margin-top: 'calc(%s / 4)' % $sizeVar.margin-bottom-height;
    }
  }
}
// end mixin

