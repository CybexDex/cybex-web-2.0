
$table-small := {
  height: 24px,
  font-size: 12px,
  color: rgba($main.white, 0.8)
  padding: 0px 8px
}

$table-middle := {
  height: 32px,
  font-size: 12px,
  color: rgba($main.white, 0.8)
  padding: 2px 8px 0
}

$table-large := {
  height: 56px,
  font-size: 12px,
  color: rgba($main.white, 0.8)
  padding: 0px 8px 
}

theme-cybex-table($size)
  $sizeVar = lookup('$table-' + $size);
  if (!$sizeVar) {
    $sizeVar = $table-middle;
  }
  .cybex {
    .{$size}-size-table {
      position relative;
      .fixed-header {
        position: absolute;
        z-index: 1;
        top: 0;
        height: $sizeVar.height;
        align-items: center;
        font-size: $sizeVar.font-size;
        .col-header {
          padding: $sizeVar.padding;
        }
      }
      .v-table.theme--dark {
        thead {
          tr {
            height: $sizeVar.height;
          }
          th {
            padding: $sizeVar.padding;
            &.column.sortable {
              line-height: $sizeVar.height;
            }
          }
        }
        tbody {
          tr:not(.v-datatable__expand-row) {
            height: $sizeVar.height;
          }
          td {
            height: $sizeVar.height;
            font-size: $sizeVar.font-size;
            color: $sizeVar.color;
            padding: $sizeVar.padding;
          }
        }
      }
    }
  }
  
  

for size in 'small' 'middle' 'large' {
  theme-cybex-table(size);
}
.cybex {
  .fixed-header {
    position: absolute;
    z-index: 1;
    color: rgba($main.white, 0.5);
    background: $main.lead;
    width: 100%;
    line-height: 1.33;
    .desc .v-icon {
      transform: rotate(-180deg);
    }
    .v-icon {
      margin-left: 4px; 
    }
  }
  // empty
  .empty-table {
    .v-table.theme--dark tbody tr:hover {
      background-color: $main.lead !important;
      td {
        color: rgba($main.white, 0.8);
      }
    }
  }
  // 透明背景
  // 透明背景用样式
  .transparent-bg .v-table.theme--dark {
    background-color: transparent !important;
    thead tr {
      height: 40px;
    }
    thead th:first-child,  
    tbody td:first-child {
      padding: 0 24px 0 8px;
    }
    
    tbody {
      tr {
        &:hover, &.expand-row {
          background-color: #232a38 !important;
          color: $main.white;
        }
      }
      // expand content
      .v-datatable__expand-content {
        max-width: 100%;
        padding: 8px 36px;
        background: $main.lead;
        color: $main.white;
        height: 60px;
        display: flex;
        align-items: center;
        line-height: 20px;
        f-cybex-style('medium');
        overflow: auto;
        word-break: break-all;
      }  
    }
  }
  .v-table {
    &.theme--dark {
      // 通用样式
      background-color: $main.lead !important;
      thead {
        tr:first-child {
          border-bottom: none;
        }
        th, th.column.sortable.active {
          color: rgba($main.white, 0.5);
          .v-icon {
            margin-left: 4px;
          }
          &.text-xs-left {
            &.text-right {
              text-align: right !important;
              // padding-right: 0;
            }
          }
          &.text-xs-right {
            // padding-right: 0
          }
        }
      }
      tbody {
        // tr
        tr {
          &:hover {
            td:first-child {
              border-top-left-radius: 4px;
              border-bottom-left-radius: 4px;
            }
            td:last-child {
              border-top-right-radius: 4px;
              border-bottom-right-radius: 4px;
            }
          }
          &:not(:last-child) {
            border-bottom: 0 !important;
          }
          &:not(.v-datatable__expand-row):not(:last-child) {
            box-shadow: inset 0 -1px 0 0 rgba($main.noir, 0.2);
          }
          &:hover {
            background: rgba($main.white, 0.04) !important;
            td {
              color: rgba($main.white, 1);
            }
          }
        }
          
        // td
        td {
          f-cybex-style('heavy');
          color: rgba($main.white, 0.8);
          .explorer-link {
            color: $main.grey;
          }
        }
      }
      // 通用样式结束
    }
  }
  // 用于 table 上下方的布局与分页
  // 上方按钮 下方分页
  .v-toolbar {
    &.data-table-toolbar {
      &.theme--dark {
        background: transparent;
        box-shadow: none;
        color: rgba($main.white, 0.4);
        font-size: 12px;
        .v-toolbar__content {
          padding: 0 8px;
          height: 48px;
          .page-count-label {
            color: rgba($main.white, 0.5);
          }

          .v-pagination {
            .v-pagination__more  {
              width: 24px
              height: 24px;
              padding: 8px;
            }
            .v-pagination__navigation {
              background: transparent !important;
              box-shadow: none;
              border: none !important;
              outline: none !important;
            }
            .v-pagination__item {
              border: none !important;
              outline: none !important;
              width: 24px;
              min-width: 24px;
              margin: 8px;
              height: 24px;
              background: transparent !important;
              font-size: 10px;
              line-height: 24px;
              box-shadow: none;
              color: $main.grey;
              &.v-pagination__item--active {
                color: rgba($main.orange, 0.8);
                background: rgba($main.white, 0.04) !important;
              }
            }
          }
        }
      }
    }
  }
}
      